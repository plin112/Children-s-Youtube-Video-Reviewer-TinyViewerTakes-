<link rel="stylesheet" type="text/css" href="/css/individualchannel.css">


<header>
  <h1>{{channel.channelTitle}}</h1>
</header>
<main>
  <div id="channelDetails">
    <div id="invidualchnlInfo">
      <div id="channelDiv">
        <h2>Channel Overview</h2>
        <p>Description: <span>{{channel.channelDescription}}</span></p>
        <p>Owner:<span>{{channel.channelOwnerName}}</span> </p>
        <p>Website:
          <a href="{{channel.website}}" target="_blank">{{channel.website}}</a>
        </p>
        {{!-- <p>Keywords:
          {{#each channel.keywords}}{{this}}{{#unless @last}},
          {{/unless}}{{/each}}</p>
        <p>Categories:
          {{#each channel.categories}}{{this}}{{#unless @last}},
          {{/unless}}{{/each}}</p> --}}
        <p>Keyword:<span>{{channel.keywords}}</span> </p>
        <p>Category: <span>{{channel.categories}}</span></p>
        <p>Average Rating: <span>{{channel.averageRating}}</span></p>
        <p>Parental Guidance Age: <span>{{channel.startingAge}}</span></p>
      </div>
      <div>
        <main>
          <!-- Add New Review Form -->

          <form method="POST" id="addReviewForm" action="/channels/{{channel._id}}/reviews">
            <h2>Add Review Here</h2>
            <label for="reviewTitle">Review Title</label>
            <input type="text" id="reviewTitle" name="reviewTitle" /><br />
            <label for="reviewDescription">Review Description</label>
            <input type="text" id="reviewDescription" name="reviewDescription" /><br />
            <label for="reviewRating">Rating</label>
            <input type="text" id="reviewRating" name="reviewRating" /><br />
            <button id="rwsubmitBtn" type="submit">Add Review</button>
          </form>
        </main>
      </div>
    </div>

    <h3>Reviews</h3>
    <div id="reviewDiv">
      <ul id="reviewsList">
        {{#if channel.reviews.length}}
        {{#each channel.reviews}}
        <li id="singleReviewDiv">
          <p class="reviewer-name">Reviewed by:<span>{{this.reviewerName}}</span> </p>
          <p class="review-title">Title: <span>{{this.title}}</span></p>
          <p class="review-description">Review:<span> {{this.review}}</span></p>
          <p class="review-rating">Rating:<span>{{this.rating}}</span> </p>
          <button class="remove-review" type="submit" data-review-id="{{this._id}}">Remove Review</button>
          <div class="review-comments">
            <h4>Comments:</h4>
            <ul>
              {{#if this.comments}}
              {{#each this.comments}}
              <li id="comment">{{this.commenterName}}: {{this.text}}</li>
              {{/each}}
              {{else}}
              <p>No comments yet.</p>
              {{/if}}
            </ul>
          </div>
          <!-- Comment submission form -->
          <form action="/channels/{{../channel._id}}/reviews/{{this._id}}/comments" method="POST">
            <input type="text" name="comment" placeholder="Enter your comment" required>
            <button type="submit">Add Comment</button>
          </form>

        </li>
        {{/each}}
        {{else}}
        <p>No reviews yet.</p>
        {{/if}}
      </ul>
    </div>
  </div>
  <footer>
     <button id="gobackBtn"><a href="/channels">Go back to main page</a></button> 
  </footer>

</main>